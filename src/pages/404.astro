---
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Intro from "../components/Intro.astro";
import { SITE_TITLE } from "../config";
---

<PageLayout>
    <PageMeta title="404" slot="meta" />
    <Fragment slot="main">
        <h1
            class="font-bold text-text-heading text-center text-4xl md:text-5xl pt-10 pb-2 overflow-hidden"
        >
            <span
                class="bg-gradient-to-bl bg-no-repeat bg-bottom bg-[length:90%_40%] from-primary-blue to-primary-blue dark:from-primary-blue dark:to-primary-blue"
            >
                <p
                    class="text-text-heading text-center text-4xl md:text-5xl pt-4 pb-2 overflow-hidden"
                >
                    404
                </p>
            </span>
        </h1>
        <p class="text-center pt-4 pb-2 overflow-hidden">
            Something went wrong
        
        </p>
        <img 
        class="object-center rounded-full float-right"
        src="/images/404.gif" alt="" srcset="" />
    </Fragment>
</PageLayout>
